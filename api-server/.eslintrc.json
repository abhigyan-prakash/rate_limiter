{
  "env":{
    "node":true,
    "es6":true,
    "jasmine":true,
    "jest":true
  },
  "parser":"babel-eslint",
  "parserOptions":{
    "ecmaVersion":6,
    "sourceType":"module",
    "ecmaFeatures":{
      "jsx":true,
      "modules":true,
      "experimentalObjectRestSpread":true
    }
  },
  "extends":[
    "eslint:recommended"
  ],
  "rules":{
    "indent":[
      "error",
      2,
      {
        "SwitchCase":1,
        "ignoredNodes":[
          "TemplateLiteral"
        ],
        "offsetTernaryExpressions":true
      }
    ],
    "no-constant-condition":[
      "error",
      {
        "checkLoops":false
      }
    ],
    "quotes":[
      "error",
      "single",
      {
        "avoidEscape":true,
        "allowTemplateLiterals":true
      }
    ],
    "comma-dangle":[
      "error",
      "never"
    ],
    "no-empty":[
      "error",
      {
        "allowEmptyCatch":true
      }
    ],
    "getter-return":[
      "error",
      {
        "allowImplicit":true
      }
    ],
    "no-unused-vars":[
      "error",
      {
        "args":"after-used",
        "caughtErrors":"none"
      }
    ],
    "arrow-parens":0,
    "no-tabs":1,
    "no-console":1,
    "generator-star-spacing":0
  }
}